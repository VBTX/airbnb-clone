<% unless flash.empty? %>
	<script type="text/javascript">
		<% flash.each do |f| %>
		<% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
		toastr['<%= type %>']('<%= f[1] %>')
		<% end %>
	</script>
<% end %>


 <!-- f[0] is for the type of message and f[1] is for the content because it's usually flash[:notice] = "email is incorrect", so we want to substitute
 things for the first party of it and then also apply toastr for the second part of it -->