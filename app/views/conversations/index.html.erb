<div class="row">
	<div class="col-md-12">
		
		<div class="panel panel-default">
			<div class="panel-heading">Your conversations</div>
			<div class="panel-body">
				<div class="container">
					<% @conversations.each do |conversation| %>
						<% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %>

						<%= link_to conversation_messages_path(conversation) do %>

							<div class="row conversation">
								<div class="col-md-2">
									<% if other.avatar_content_type == nil %>
											<%= image_tag avatar_url(other.id), class: "img-circle avatar-small" %>&nbsp;
									<% else %>
									<%= image_tag(other.avatar.url(:thumb), class: "img-circle avatar-small") %>&nbsp;
									<% end%>
									
								</div>
								<div class="col-md-2">
									<%= other.fullname %><br>
									<%= conversation.messages.last.message_time %>
								</div>
								<div class="col-md-8">
									<%= conversation.messages.last.content %>
								</div>
							</div>

						<% end %>
					<% end %>
				</div>
			</div>
		</div>

	</div>
</div>